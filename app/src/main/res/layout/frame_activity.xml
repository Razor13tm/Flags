<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        android:rotationY="13"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left|top"
        android:src="@drawable/thail" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right|top"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:rotationY="-13"
        android:src="@drawable/columbia" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_gravity="center|left"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:contentDescription="@string/app_name"
        android:rotationY="13"
        android:src="@drawable/swiss_stanok_migom" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_gravity="center|right"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:contentDescription="@string/app_name"
        android:rotationY="-13"
        android:src="@drawable/itap" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_marginTop="180dp"
       android:layout_gravity="center|top"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:rotationY="13"
        android:src="@drawable/polshin" />
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="180dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:rotationY="-13"
        android:src="@drawable/aust" />
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="120dp"
        android:layout_marginBottom="50dp"
        android:layout_height="101dp"
        android:layout_gravity="right|bottom"
        android:contentDescription="@string/app_name"
        android:rotationY="13"
        android:layout_marginRight="20dp"
        android:src="@drawable/dan" />
    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="120dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:rotationY="-13"
        android:src="@drawable/madagascin" />

</FrameLayout>